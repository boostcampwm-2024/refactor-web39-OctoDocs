# 빌드 스테이지
FROM octodocs-modules:latest as builder

# 소스 코드 복사
COPY . .
WORKDIR /app/apps/backend


# 빌드
RUN yarn build

# 프로덕션 스테이지
FROM builder

WORKDIR /app/apps/backend

COPY --from=builder /app/apps/backend/dist ./dist

# 프로덕션 모드로 실행
ENV NODE_ENV=production

EXPOSE 3000

CMD ["yarn", "start:prod"]